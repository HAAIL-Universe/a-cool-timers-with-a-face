# A cool timers with a Face â€” Environment Configuration
# Copy this file to .env and fill in the required values

# PostgreSQL database connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/timers_db
DATABASE_URL=postgresql://user:password@localhost:5432/timers_db

# JWT secret key for signing bearer tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-here-change-in-production

# Allowed CORS origins (comma-separated)
# For local development: http://localhost:3000,http://localhost:8000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Default timer duration in seconds
# Used when no specific duration is provided
DEFAULT_DURATION_SECONDS=30

# Optional: Application environment (development, staging, production)
# APP_ENV=development

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Optional: Host and port for the FastAPI server
# HOST=0.0.0.0
# PORT=8000
