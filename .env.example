# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/timers_db

# JWT Secret for Bearer Token Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Origins (comma-separated list of allowed frontend origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Default Timer Duration (in seconds)
DEFAULT_DURATION_SECONDS=30

# Urgency Thresholds (percentage of initial time remaining)
# >50% remaining: low urgency
# 25-50% remaining: medium urgency
# 10-25% remaining: high urgency
# <10% remaining: critical urgency
URGENCY_THRESHOLD_MEDIUM=50
URGENCY_THRESHOLD_HIGH=25
URGENCY_THRESHOLD_CRITICAL=10

# Application Environment (development | production)
ENV=development

# API Server Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (for reference, set by web/ .env)
FRONTEND_URL=http://localhost:5173
