# Timer API Configuration Example
# Copy this file to .env and fill in your values

# Default timer duration in seconds when not specified in request
DEFAULT_DURATION_SECONDS=30

# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/timers_db

# JWT secret key for token signing (use a strong, random value in production)
JWT_SECRET=your-secret-key-change-me-in-production

# CORS origins allowed to access the API
# Format: comma-separated list (e.g., "http://localhost:3000,http://localhost:5173")
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# FastAPI environment (development|production)
ENVIRONMENT=development

# Server host and port
HOST=127.0.0.1
PORT=8000

# Urgency level thresholds (percentage of initial duration remaining)
# Adjust these to control when urgency states change
URGENCY_CRITICAL_THRESHOLD=10
URGENCY_HIGH_THRESHOLD=25
URGENCY_MEDIUM_THRESHOLD=50

# Colour intensity configuration
# RGB values for urgency states
COLOUR_LOW_RED=0
COLOUR_LOW_GREEN=255
COLOUR_LOW_BLUE=0

COLOUR_MEDIUM_RED=255
COLOUR_MEDIUM_GREEN=255
COLOUR_MEDIUM_BLUE=0

COLOUR_HIGH_RED=255
COLOUR_HIGH_GREEN=165
COLOUR_HIGH_BLUE=0

COLOUR_CRITICAL_RED=255
COLOUR_CRITICAL_GREEN=0
COLOUR_CRITICAL_BLUE=0

# Optional: Logging level (DEBUG|INFO|WARNING|ERROR)
LOG_LEVEL=INFO
